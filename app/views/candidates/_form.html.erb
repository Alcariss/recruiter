<%= form_for @candidate, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :name, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :surname, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :surname, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :email, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :email, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :phone, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :phone, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :role, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :role, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :city, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :city, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :technology, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :technology, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :company_id, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.collection_select :company_id, Company.all, :id, :name %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :attachment, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.file_field :attachment, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :linkedin, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :linkedin, :class => 'text_field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  candidates_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
