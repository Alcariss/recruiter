<%- model_class = Candidate -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>

<div id="search">
	<%= render :partial => 'candidates/search' %>
<div>

<table class="table table-striped">
  <thead>
    <tr>
      
      <th><%= model_class.human_attribute_name(:name) %></th>
      
      <th><%= model_class.human_attribute_name(:email) %></th>
      <th><%= model_class.human_attribute_name(:phone) %></th>
      <th><%= model_class.human_attribute_name(:role) %></th>
      <th><%= model_class.human_attribute_name(:city) %></th>
      <th><%= model_class.human_attribute_name(:technology) %></th>
      <th><%= model_class.human_attribute_name(:company_name) %></th>
      
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @candidates.each do |candidate| %>
      <tr>
        
          <td><%= link_to candidate.full_name, candidate %></td>
          
          <td><%= candidate.email %></td>
          <td><%= candidate.phone %></td>
          <td><%= candidate.role %></td>
          <td><%= candidate.city %></td>
          <td><%= candidate.technology %></td>
          <td><%= link_to candidate.company.name, candidate.company %></td>
          
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_candidate_path(candidate), :class => 'btn btn-xs btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              candidate_path(candidate),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_candidate_path,
            :class => 'btn btn-primary' %>
