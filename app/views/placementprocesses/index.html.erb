<%- model_class = Placementprocess -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:candidate_id) %></th>
      <th><%= model_class.human_attribute_name(:company_id) %></th>
      <th><%= model_class.human_attribute_name(:position) %></th>
      <th><%= model_class.human_attribute_name(:active) %></th>
      <th><%= model_class.human_attribute_name(:presenteddate) %></th>
      <th><%= model_class.human_attribute_name(:clientinterviewdate) %></th>
      <th><%= model_class.human_attribute_name(:offerplaceddate) %></th>
      <th><%= model_class.human_attribute_name(:offeredsalary) %></th>
      <th><%= model_class.human_attribute_name(:offeredstart) %></th>
      <th><%= model_class.human_attribute_name(:offeraccepteddate) %></th>
      <th><%= model_class.human_attribute_name(:acceptedsalary) %></th>
      <th><%= model_class.human_attribute_name(:acceptedstart) %></th>
      <th><%= model_class.human_attribute_name(:starteddate) %></th>
      <th><%= model_class.human_attribute_name(:paiddate) %></th>
      <th><%= model_class.human_attribute_name(:processnotes) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @placementprocesses.each do |placementprocess| %>
      <tr>
        <td><%= placementprocess.id %></td>
          <td><%= placementprocess.candidate_id %></td>
          <td><%= placementprocess.company_id %></td>
          <td><%= placementprocess.position %></td>
          <td><%= placementprocess.active %></td>
          <td><%= placementprocess.presenteddate %></td>
          <td><%= placementprocess.clientinterviewdate %></td>
          <td><%= placementprocess.offerplaceddate %></td>
          <td><%= placementprocess.offeredsalary %></td>
          <td><%= placementprocess.offeredstart %></td>
          <td><%= placementprocess.offeraccepteddate %></td>
          <td><%= placementprocess.acceptedsalary %></td>
          <td><%= placementprocess.acceptedstart %></td>
          <td><%= placementprocess.starteddate %></td>
          <td><%= placementprocess.paiddate %></td>
          <td><%= placementprocess.processnotes %></td>
        <td><%=l placementprocess.created_at, format: :long %></td>
        <td>
          <%= link_to placementprocess_path(placementprocess), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
          <%- end -%>
          <%= link_to edit_placementprocess_path(placementprocess), :class => 'btn btn-xs', :title => "#{ t('.edit', :default => t('helpers.links.edit')) }" do %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to placementprocess_path(placementprocess), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_placementprocess_path,
            :class => 'btn btn-primary' %>
