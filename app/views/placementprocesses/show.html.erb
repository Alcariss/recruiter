<%- model_class = Placementprocess -%>
<div class="page-header">
  <h1><%= @placementprocess.candidate.full_name %>'s process overview</h1>
</div>

<div class="fieldset">
  <dl>
	  <dt class="label label-default"><%= model_class.human_attribute_name(:responsible_user) %></dt>
      <dd><pre class="prettyprint"><%= @placementprocess.user.email %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:candidate_id) %></dt>
      <dd><pre class="prettyprint"><%= @placementprocess.candidate.full_name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:company) %></dt>
      <dd><pre class="prettyprint"><%= @placementprocess.company.name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:position) %></dt>
      <dd><pre class="prettyprint"><%= @placementprocess.position %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:active) %></dt>
      <dd><pre class="prettyprint"><%= @placementprocess.active %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:presented_on) %></dt>
      <dd><pre class="prettyprint"><%= @placementprocess.presenteddate %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:clientinterview_on) %></dt>
      <dd><pre class="prettyprint"><%= @placementprocess.clientinterviewdate %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:offerplaced_on) %></dt>
      <dd><pre class="prettyprint"><%= @placementprocess.offerplaceddate %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:offered_salary) %></dt>
      <dd><pre class="prettyprint"><%= @placementprocess.offeredsalary %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:offered_start) %></dt>
      <dd><pre class="prettyprint"><%= @placementprocess.offeredstart %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:offeraccepted_on) %></dt>
      <dd><pre class="prettyprint"><%= @placementprocess.offeraccepteddate %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:accepted_salary) %></dt>
      <dd><pre class="prettyprint"><%= @placementprocess.acceptedsalary %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:accepted_start_on) %></dt>
      <dd><pre class="prettyprint"><%= @placementprocess.acceptedstart %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:real_started_date) %></dt>
      <dd><pre class="prettyprint"><%= @placementprocess.starteddate %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:invoice_paid_date) %></dt>
      <dd><pre class="prettyprint"><%= @placementprocess.paiddate %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:process_notes) %></dt>
      <dd><pre class="prettyprint"><%= @placementprocess.processnotes %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              user_path(@current_user), :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_placementprocess_path(@placementprocess), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              placementprocess_path(@placementprocess),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>