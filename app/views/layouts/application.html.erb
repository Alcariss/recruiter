<!DOCTYPE html>
<html>
<head>
  <title>Recruiter</title>
  <%= stylesheet_link_tag 'application', media: 'all','data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
  <body>
  <% if !signed_in? %>
	<% else %>
	Signed as: <%= @current_user.email %>
	<%= link_to "Sign Out", signout_path %>
	<% end %>
	
<% flash.each do |key, value| %>
	<br>
	<div class="flash <%= key%>" style="background-color:red; font-size:20px">
	<%= value %>
	</div>
<% end %>

    <header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <%= link_to "the recruiter", '#', id: "logo" %>
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to "Home", root_path %></li>
			<li><%= link_to "Users", users_path %></li>
			<li><%= link_to "Companies", companies_path %></li>
			<li><%= link_to "Candidates", candidates_path %></li>
		    <li><%= link_to "Contacts", contacts_path %></li>
          </ul>
        </nav>
      </div>
    </header>
    <div class="container">
      <%= yield %>
    </div>
	<hr>
	<div class="footer">
      <div class="container">
        <p>The Recruiter by Jan Chmela≈ô. <a href="https://github.com/Alcariss/recruiter">GitHub</a></p>
      </div>
    </div>
  </body>
</html>
